<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iBarber</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="./css/site.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div id="NavBarHome">
            <nav class="navbar navbar-dark bg-dark fixed-top">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                        <span class="navbar-toggler-icon" id="BottonMenu"></span>
                    </button>

                    <a class="navbar-brand" href="#" id="LogoiBarberNavBar">
                        <img src="./img/iBarberLogotipo3.0Miniatura.png" alt="" width="100" height="40">
                    </a>

                    <button class="btn btn-outline-light me-2" type="button" id="ButtonNavBarParceiro">Seja Parceiro</button>
                    <button class="btn btn-sm btn-outline-light" type="button" id="ButtonNavBarLogin">Login</button>


                    <!-- Conteúdo da NavBar -->

                    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                        <div class="offcanvas-header" style="background-color: #343434; color: #d9d9d9;">
                            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                        </div>
                        <div class="offcanvas-body" style="background-color: #343434; color: #d9d9d9;">
                            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Barbearia" asp-action="Listar">Barbearia</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Agendamento" asp-action="Listar">Agendamento</a>
                                </li>


                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>


    @RenderBody()





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
